<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.TheCommunityBoard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deepOrange</item>
        <item name="colorPrimaryVariant">@color/deepOrangeDark</item>
        <item name="colorOnPrimary">@color/whitishText</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/greyDark</item>
        <item name="colorOnSecondary">@color/orangeText</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextAppearance.TheCommunityBoard.MainTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/huggable_ff</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextAppearance.TheCommunityBoard.Label" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/huggable_ff</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Widget.TheCommunityBoard.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poetsen_one_ff</item>
        <item name="android:tint">?attr/colorPrimary</item>
        <item name="android:drawableTint">?attr/colorPrimary</item>
    </style>
</resources>